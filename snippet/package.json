{
  "name": "snippet",
  "version": "0.0.1",
  "main": "index.js",
  "repository": {},
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "test": "jest",
    "dev": "node_modules/.bin/json-server --watch backend/db.json",
    "example": "node_modules/.bin/live-server --port=5566 --open='/example.html' "
  },
  "lint-staged": {
    "gitDir": "../",
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "./test/setup.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage/",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/setup.js",
      "!**/coverage/**",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 30,
        "functions": 30,
        "lines": 30,
        "statements": 30
      }
    }
  },
  "devDependencies": {
    "husky": "^0.13.3",
    "jest": "^19.0.2",
    "lint-staged": "^3.4.0",
    "live-server": "^1.2.0",
    "prettier": "^1.2.2",
    "sinon": "^2.1.0"
  },
  "dependencies": {
    "json-server": "^0.10.0"
  }
}
